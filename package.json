{
  "name": "vam_monitoring",
  "version": "1.0.0",
  "description": "Visual / Audio / Motion Monitoring",
  "main": "src/server/server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run start-dev-client && npm run start-dev-server",
    "stop": "npm run stop-dev-client && npm run stop-dev-server",
    "list": "node_modules/pm2/bin/pm2 list",
    "start-dev-server": "node_modules/pm2/bin/pm2 start src/server/server.js --watch --name vam-server",
    "stop-dev-server": "node_modules/pm2/bin/pm2 stop vam-server && node_modules/pm2/bin/pm2 delete vam-server",
    "start-dev-client": "node_modules/pm2/bin/pm2 start webpack-dev-server --name vam-client -- --mode development --config conf/webpack.config.js --open --hot",
    "stop-dev-client": "node_modules/pm2/bin/pm2 stop vam-client && node_modules/pm2/bin/pm2 delete vam-client",
    "build-client": "webpack --mode production --config conf/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gaudeon/vam_monitoring.git"
  },
  "author": "Travis Chase",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gaudeon/vam_monitoring/issues"
  },
  "homepage": "https://github.com/gaudeon/vam_monitoring#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.10",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "pm2": "^2.10.1",
    "style-loader": "^0.20.3",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^14.2.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.1"
  },
  "dependencies": {
    "express": "^4.16.2",
    "mic": "^2.1.2",
    "socket.io": "^2.0.4",
    "vue": "^2.5.15",
    "wiring-pi": "^2.2.1"
  }
}
